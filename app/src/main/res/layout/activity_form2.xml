<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Heading - Registration Form-->
    <TextView
        android:id="@+id/label_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/register"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tvCurrentWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_Register"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:text="Your current weight(KG)?"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/etCurrentWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@id/tvCurrentWeight"
        android:hint="78"
        android:background="@drawable/border"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvWeeksPregnant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCurrentWeight"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:text="How many weeks pregnant are you?"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/etWeeksPregnant"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeeksPregnant"
        android:hint="3"
        android:background="@drawable/border"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorPrimary"
        android:onClick="nextForm"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSingleORTwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etWeeksPregnant"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:text="How many babies are in your womb?"
        android:textColor="#000000"
        />
    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSingleORTwin"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:orientation="horizontal">
        >

        <RadioButton
            android:id="@+id/radioSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single baby"
             />

        <RadioButton
            android:id="@+id/radioTwin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twin babies"
            />
        <RadioButton
            android:id="@+id/radioDontknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't know yet"
            android:checked="true"
            />

    </RadioGroup>



</RelativeLayout>
